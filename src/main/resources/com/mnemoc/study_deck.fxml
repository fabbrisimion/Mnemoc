<AnchorPane prefHeight="322.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1">
    <GridPane alignment="CENTER" layoutX="49.0" layoutY="31.0" prefHeight="182.0" prefWidth="502.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="173.0" minHeight="10.0" prefHeight="90.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="98.0" minHeight="0.0" prefHeight="92.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label fx:id="answerLabel" alignment="CENTER" contentDisplay="CENTER" text="Press ENTER to view the answear"
               textAlignment="CENTER" GridPane.rowIndex="1">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
    </GridPane>
    <HBox alignment="CENTER" layoutX="50.0" layoutY="235.0" prefHeight="46.0" prefWidth="502.0">
        <cursor>
            <Cursor fx:constant="DEFAULT"/>
        </cursor>
        <Button fx:id="easy" mnemonicParsing="false" text="Easy">
            <HBox.margin>
                <Insets/>
            </HBox.margin>
        </Button>
        <Button fx:id="medium" mnemonicParsing="false" text="Medium"/>
        <Button fx:id="hard" mnemonicParsing="false" text="Hard"/>
    </HBox>
</AnchorPane>
